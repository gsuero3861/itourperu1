<Page
    x:Class="IControls.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IControls"
    xmlns:slider="using:IControls.SliderView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        
        <slider:SlideViewer x:Name="slider1"></slider:SlideViewer>
        
        <Grid Width="300" Height="300" Background="AliceBlue" ManipulationMode="All" Visibility="Collapsed"
              ManipulationCompleted="Grid_ManipulationCompleted_1" ManipulationDelta="Grid_ManipulationDelta_1"
              ManipulationInertiaStarting="Grid_ManipulationInertiaStarting_1"> 
            <Grid.RenderTransform>
                <CompositeTransform x:Name="transform1" ></CompositeTransform>
            </Grid.RenderTransform>
        </Grid>
    </Grid>
</Page>